{
  "watch": [
    "package.json",
    "src/main/**/*.js"
  ],
  "ignore": [
    "src/renderer/**/*",
    "node_modules/**/*",
    "dist/**/*",
    "*.log"
  ],
  "ext": "js,json",
  "env": {
    "NODE_ENV": "development"
  },
  "exec": "electron .",
  "delay": "500",
  "restartable": "rs",
  "verbose": true,
  "colours": true,
  "legacyWatch": true,
  "signal": "SIGTERM",
  "exitcrash": true,
  "crash": true
} 
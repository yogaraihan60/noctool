{
  "name": "noctool",
  "version": "1.0.0",
  "description": "Network Utility Tool - A comprehensive desktop application for network diagnostics",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently --kill-others-on-fail --prefix-colors \"cyan,green\" \"npm run dev:renderer\" \"wait-on http://localhost:3000 && npm run dev:electron\"",
    "dev:renderer": "cd src/renderer && npm start",
    "dev:electron": "cross-env NODE_ENV=development nodemon --signal SIGTERM",
    "dev:hot": "concurrently --kill-others-on-fail --prefix-colors \"cyan,green\" \"npm run dev:renderer\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "dev:stop": "powershell -ExecutionPolicy Bypass -File dev-stop.ps1",
    "build": "cd src/renderer && npm run build",
    "build:electron": "electron-builder",
    "dist": "npm run build && npm run build:electron",
    "test": "jest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "network",
    "utility",
    "ping",
    "traceroute",
    "port-scanner",
    "electron"
  ],
  "author": "Noctool Developer",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "chokidar": "^3.6.0",
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-store": "^10.1.0",
    "find-open-port": "^2.0.3",
    "geoip-lite": "^1.4.7",
    "nodejs-traceroute": "^2.0.1",
    "ping": "^0.4.4",
    "smart-buffer": "^4.2.0",
    "whois": "^2.15.0"
  },
  "build": {
    "appId": "com.noctool.app",
    "productName": "Noctool",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
